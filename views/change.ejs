<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="text-white">
    <%- include('./partials/header'); %>
    <div class="w-2/3 mx-auto mt-4 text-center">
        <p class="text-2xl">Change Record</p>
        <form action="/expenses/<%= expense.id %>/change" method="post" class="mt-6 w-1/3 mx-auto bg-surface-a10 p-4 rounded-xl">
            <div class="flex flex-row gap-4">
                <input
                    type="number"
                    name="amount"
                    required
                    placeholder="zÅ‚"
                    class="w-full px-3 rounded-lg bg-surface-a20 focus:outline-none focus:ring-2 focus:ring-primary-a0"
                    value="<%= expense.amount %>">
                <select
                    name="category"
                    required
                    class="w-40 px-3 rounded-lg bg-surface-a20 focus:outline-none focus:ring-2 focus:ring-primary-a0">
                    <option value="">Category</option>
                    <% const categories = ['food', 'clothes', 'transport', 'games', 'restaurants', 'other']; %>
                    <% categories.forEach(category => { %>
                        <option value="<%= category %>" <%= category === expense.category ? 'selected' : '' %>>
                          <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                        </option>
                    <% }) %>
                </select>
        
                <input
                    type="date"
                    name="date"
                    required
                    class="w-36 px-3 py-2 rounded-lg bg-surface-a20 focus:outline-none focus:ring-2 focus:ring-primary-a0"
                    value="<%= expense.date %>">
            </div>
        
            <button type="submit" class="mt-4 py-2 w-full bg-primary-a0 hover:bg-primary-a30 font-semibold rounded-lg transition">Save</button>
        </form>
    </div>
</body>
</html>